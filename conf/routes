# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Home page
GET        /                                 controllers.Application.index()

# Map the JS resource paths
GET        /*file                            controllers.Assets.versioned(path="/public", file: Asset)

# GET        /users                          controllers.Application.getUsers()

POST  /users/login                           controllers.Application.loginSubmit()
POST  /users/register                        controllers.Application.registerUser()

GET   /users/:username/providerInfo          controllers.Application.getProviderInfo(String: username)
POST  /users/:username/providerInfo          controllers.Application.updateProviderInfo(String: username)

GET   /users/:username/userInfo	             controllers.Application.getUserInfo(username: String)
